.welcome-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: linear-gradient(180deg, #ffffff 0%, #f5f5f5 100%);
  padding: 0 40rpx;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 120rpx;
}

.title {
  font-size: 72rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
  letter-spacing: 2rpx;
}

.enter-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #000000;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.enter-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
} 